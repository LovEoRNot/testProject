{
  "root": true,
  "parser": "babel-parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": 2,
    "semi": "off",
    "eqeqeq": "error",
    "quotes": ["error", "single"]
  }
}